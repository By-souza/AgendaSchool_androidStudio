<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.on_lineschool.SobreFragment">


    <TextView
        android:id="@+id/versaosobre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="10dp"
        android:text="versão: 0.1 alpha"
        android:layout_marginTop="55dp"
        android:layout_alignTop="@+id/titulosobre"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/sobrelogo"
        android:layout_marginTop="25dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo"
        android:layout_below="@+id/versaosobre"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/datasobre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="15dp"
        android:layout_below="@id/sobrelogo"
        android:text="© 15.01.2017"
        android:layout_marginTop="55dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/nomesobre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_below="@id/datasobre"
        android:text="André Machado &amp; Duarte Lopes"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/prodsobre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="15dp"
        android:layout_below="@id/nomesobre"
        android:text="Productions"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
    android:id="@+id/titulosobre"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:textAlignment="center"
    android:textSize="40dp"
    android:text="On-Line School"
        android:layout_marginTop="78dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
